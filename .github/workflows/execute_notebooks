name: Execute and test notebooks

on: [push, pull_request, workflow_dispatch]


concurrency:
  group: "pages"
  cancel-in-progress: true

jobs:
  execute:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-python@v5
        with:
          python-version: "3.13"

      - name: Install dependencies
        run: |
          pip install uv
          
      - name: Execute notebooks
        run: |
          cd docs
          for f in *.ipynb; do uv run jupyter  nbconvert --execute --inplace $f; done
  
